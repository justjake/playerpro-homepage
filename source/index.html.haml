.page
  / table-cell
  .container

    / regular full-width div
    .carousel
      %h1 Fernando Torres
      .images
        - (0..8).each do |i|
          %img(alt="picture featuring Fernando Torres" src="/images/torres/#{i}.jpg")

    / Layout table-view
    .player-layout

      .left-data-col


        %figure.card-sidebar
          %img(src="/images/fernando.jpg" alt="Fernando Torres")
          %figcaption
            %img.team(src="/images/team-chelsea.png" alt="Chelsea")
            .number
              %img.bg(src="/images/icon-number-badge.png" alt="background for player number")
              %span 9
            %h1 Fernando Torres
            .stats
              .sport
                %img(src="/images/sport-soccer.png" alt="Football")
              .games
                Games
                %em 231
              .won
                Won
                %em 128
              .fans
                Fans
                %em 156k

        / player data
        %dl
          = define "Age", "29"
          = define "Nationality", "Spain"
          = define "Height", "1.83m (6'0\")"
          = define "Position", "Striker"
          = define "Number", "9"
          = define "Club", "Chelsea"

        / fan count box
        .followers
          %h4
            Fans
            2,573,462
          .twitter
            %img(src="/images/icon-twitter.png")
            %span 2,478,901
            %a.follow Follow
          .twitter
            %img(src="/images/icon-facebook.png")
            %span 577,401
            %a.follow Like

        / tower add
        .ad.tower
          %img(src="/images/add-tower.jpg")


      .center-col

        .carousel-preview
          - (0..8).each do |i|
            %a(href="#carousel/#{i}.jpg" class="#{'active' if i == 3}")
              %img(alt="picture featuring Fernando Torres" src="/images/torres/#{i}.jpg")

