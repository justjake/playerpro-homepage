---
title: Player Page
---

%header.main
  .container
    %h1#title
      %a(href="/" title="PlayerPro - Home")
        %span PlayerPro

    %section.login-menu
      %h1 Log In

      - # Log in form
      %form.menu(action="/sign-in")
        %a.facebook-button
          %img(src="/images/facebook-button-icon.png" alt="Facebook")
          %span
            log in with
            %strong Facebook

        .divider
          or

        %input(placeholder="Email" type="text" name="email" id="sign-in-email")
        %input(placeholder="Password" type="password" name="password" id="sign-in-passowrd")
        %input.btn(type="submit" value="Log In")

        %footer
          %a.sign-up(href="/sign-up")
            Sign Up
          %a.forgot-password(href="/forgot-password")
            forgot password?
    

.page
  .container

    .left-data-col
      %figure.card-sidebar
        %img(src="/images/fernando.jpg" alt="Fernando Torres")
        %figcaption
          %img.team(src="/images/team-chelsea.png" alt="Chelsea")
          .number
            %img.bg(src="/images/icon-number-badge.png" alt="background for player number")
            %span 9
          %h1 Fernando Torres
          .stats
            .sport
              %img(src="/images/sport-soccer.png" alt="Football")
            .games
              Games
              %em 231
            .won
              Won
              %em 128
            .fans
              Fans
              %em 156k



    .center-col

      .carousel
        %h1 Fernando Torres
        %img(alt="demo" src="/images/fernando.jpg")

      .tabbed
        %section(title="Wall")
          %h2 Wall
